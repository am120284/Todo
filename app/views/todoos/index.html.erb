<div class="center2">
<h1>Todo items</h1>

<div class='js-list'>
	<h2>ToDo</h2>

		<% @todos.each do |t| %>
			<p>
			  <strong> <%= t.name%></li> </strong>
			  <small><%= link_to 'Completed',todoo_path(t) , :method => :put %></small>
			</p>

		<% end%>

		<h2>Completed</h2>
			<% @todone.each do |t| %>
			<p>
				<%= t.name %>
				<small><%= link_to 'Remove', t, :confirm => 'Remove ?', :method => :delete %></small>
			</p>
		<% end %>
		<p><%= link_to "Add an item to the list", new_todoo_path %></p>

</div>